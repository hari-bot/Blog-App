<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Blog Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css">
  <!-- Include TinyMCE from CDN -->
  <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        tinymce.init({
        selector: '#myTextarea',
        height: 400,
        plugins: 'autolink lists link image charmap print preview',
        toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link image',
        });
    });
    </script>
</head>
<body>
  <div id="page">
    <%- include("partials/header.ejs") %>
    <h1 class="heading-section p-3">Create New Blog Post</h1>
    <div class="row justif-content-center px-3">
      <div class="col lg-6">
        <form id="myForm" action="/create/submit" method="post">

          <div class="form-group">
            <label class="form-label fw-bolder" for="heading">Blog Post Heading:</label>
          <input type="text" id="postHeading" name="heading" class="form-control" required>
          </div>
      
          <div class="form-group">
            <label class="form-label fw-bolder" for="content">Blog Post Content:</label>
          <textarea class="form-control" id="myTextarea" name="content" placeholder="Type out your thoughts"></textarea>
          </div>
      
         <div class="form-group mb-2">
          <label class="form-label fw-bolder" for="author">Author:</label>
          <input class="form-control" type="text" id="author" name="author" required>  
         </div>
         <div class="text-center">
          <button class="btn btn-primary" type="submit">Publish Post</button>
         </div>
        </form>

        </div>
      </div>
    
      <%- include("partials/footer.ejs") %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="scripts/script.js"></script>
</body>
</html>
